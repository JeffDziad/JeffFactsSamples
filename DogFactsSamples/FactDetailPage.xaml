<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DogFactsSamples.FactDetailPage">

    <ContentPage.Content>
        <StackLayout>
            <Button Text="Back" Clicked="FactPopupClose"></Button>
            <StackLayout Orientation="Vertical" Margin="10">
                <Label x:Name="shortFact" FontSize="20" TextColor="Black" FontAttributes="Bold"></Label>
                <BoxView 
                   HeightRequest="1"
                   Color="Black"
                   Margin ="0, 0, 0, 0"/>
                <Label x:Name="theFact" FontSize="16" TextColor="Black"></Label>
            </StackLayout>
            <Image x:Name="factImage" Source="loading.jpg"></Image>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>

